<!-- Chat Panel -->  	
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_weight="1"
    	android:background="#000000"> 
	<Button android:text=""
		android:id="@+id/Button_up_chat"
		android:background="@android:color/transparent"
		android:layout_height="30px"
		android:textSize="10px"
		android:layout_width="fill_parent">
	</Button>	
	
<!-- The layout is linear L-R with buttons, etc in a relative layout -->	
    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="1">        
	<Button android:text=""
		android:id="@+id/Button_previous_chat"
		android:background="@android:color/transparent"
		android:layout_width="50px"
		android:textSize="10px"
		android:layout_height="260px" >
	</Button>
	
<!-- Chat Control Buttons -->	
	<RelativeLayout
	android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="1">  	
           
   <!-- Chat Buttons -->   
      	
     <Button android:id="@+id/button_chat_speaker" 
		android:layout_width="wrap_content"
		android:background="@drawable/chat_speaker_focused"
		android:layout_marginLeft="35dip"
		android:layout_marginTop="0dip"
		android:layout_height="wrap_content">
	</Button> 		 	
      	     	
	<Button android:id="@+id/button_chat_custom1" 
		android:layout_width="wrap_content"
		android:background="@drawable/chat_button_custom1"
		android:layout_marginLeft="10dip"
		android:layout_marginTop="61dip"
		android:layout_height="wrap_content">
	</Button> 			
		
	<Button android:id="@+id/button_chat_custom2" 
		android:layout_width="wrap_content"
		android:background="@drawable/chat_button_custom2"
		android:layout_marginLeft="10dip"
		android:layout_marginTop="129dip"
		android:layout_height="wrap_content">
	</Button> 			
			
	<Button android:id="@+id/button_chat_driving" 
		android:layout_width="wrap_content"
		android:background="@drawable/chat_button_driving"
		android:layout_marginLeft="35dip"
		android:layout_marginTop="190dip"
		android:layout_height="wrap_content">
	</Button>     	      	

	
 	 
 	  	
	
	<TextView 
  		android:id="@+id/textview"
  		android:layout_width="fill_parent"
 		 android:layout_height="fill_parent"
 		 android:layout_marginLeft="120dip"
 		 android:layout_marginTop="0dip"
 		 android:typeface="sans"
 		 android:textStyle="bold"
 		 android:textColor="#00ff00"  
 		 android:textSize="57sp"		
 		 android:text="@string/chat_name"
 	 />
 	 	 
 	 
